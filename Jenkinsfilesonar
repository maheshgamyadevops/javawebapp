pipeline {

    // run on jenkins nodes tha has slave label .....

    agent { label 'maven' }

    // global env variables

  
    
    stages 
	{
        
              
        stage('Code Quality Check (Sonarqube)')
        {
          steps
          {
             withSonarQubeEnv (installationName: 'sonarmdk')
				 {
               
                    sh 'mvn clean install sonar:sonar'
                }
            }
        }
        
        
        
    }
}
        
    
